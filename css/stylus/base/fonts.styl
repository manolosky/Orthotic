.text
    color black
    font-size responsive
    font-weight normal
    line-height 1.2em
    &--xs
        font-size .8em
    &--sm
        font-size .9em
    &--md
        font-size 1.2em !important
    &--lg
        font-size 1.4em !important
    &--xlg
        font-size 1.8em !important
    &--xxlg
        font-size 2.2em
    &--xxxlg
        font-size 3em
    &--azul
        color #303c76
    &--white
        color white
    &--gray
        color #B3B2B2
    &--bold
        font-weight 600

.link
    background none
    font-weight 400
    outline none
    line-height 1.2em
    margin .5em 0
    &--none
        text-decoration none
        &:hover, &:active, &:focus
            text-decoration none

.error
    color red
    font-family font
    font-size responsive
    font-weight 300
    
.border
    &-alert
        border-width 1px 1px 1px 5px !important
