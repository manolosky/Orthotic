.btn
	font-family font
	transition all 100ms linear
	&-silver
		background silver
		color white
		&:hover, &:focus, &:active, &.active
			background gray
			color white
	&-primary
		background #283371
		border-color #0C1545
		&:hover
			background #0C1545
			border-color #283371
	&-primary--claro
		background #007bff
		border-color #007bff
		color white
		&:hover
			background #035FC1
			border-color #035FC1
			color white
	&-outline
		&-primary
			border-color #283371
			color #283371
			&:hover
				background #0C1545
				border-color #0C1545
				color white
	&-checkbox, &-radios
		background #283371
		border-color #0C1545
		border-radius 6px
		color white
		text-align left
		&.active
			background #0C1545
			border-color #283371
			color white
	&-group
		&--special
			display flex
			.btn-h100
				flex 1 !important
